{
  "info": {
    "name": "Mini Book API",
    "description": "Postman collection for Mini Book API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
        }
      }
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/me",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "me"
          ]
        }
      }
    },
    {
      "name": "Get Books",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/books",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "books"
          ]
        }
      }
    },
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/books",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "books"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Clean Code\",\n  \"author\": \"Robert C. Martin\",\n  \"published_at\": \"2008-08-01\"\n}"
        }
      }
    },
    {
      "name": "Update Book",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/books/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "books",
            "1"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Clean Code (2nd Ed)\"\n}"
        }
      }
    },
    {
      "name": "Get Book Report",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/books/1/report",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "books",
            "1",
            "report"
          ]
        }
      }
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/books/1",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "books",
            "1"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}